<!-- Quadratic function using the plus option -->
<arglist>
  <arg name=a type=double/>
  <arg name=b/>
  <arg/>
</arglist>

<func>
  <div>
    <add>
      <neg arg=b/>
      <sqrt>
        <sub>
          <pow arg1=b arg2=2/>
          <mult arg2=4><arg name=a/><arg index=2/></mult>
        </sub>
      </sqrt>
    </add>
    <mult arg2=2><arg name=a/></mult>
  </div>
</func>
